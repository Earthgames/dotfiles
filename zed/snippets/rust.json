// copied from https://github.com/bobbymannino/rust-snippets-for-zed
{
  "Initialize an immutable vec": {
    "prefix": "let_vec",
    "description": "Initialize an empty immutable empty vec",
    "body": ["let ${1:vec} = vec![$2];"]
  },
  "Initialize a mutable vec": {
    "prefix": "mut_vec",
    "description": "Initialize an empty mutable empty vec",
    "body": ["let mut ${1:vec} = vec![$2];"]
  },
  "Match an option": {
    "prefix": "match_option",
    "description": "Match an option statement",
    "body": [
      "match ${1:option} {",
      "  Some(value) => { $2 }",
      "  None => { $3 }",
      "}"
    ]
  },
  "Match a result": {
    "prefix": "match_result",
    "description": "Match a result statement",
    "body": [
      "match ${1:result} {",
      "  Ok(value) => { $2 }",
      "  Err(error) => { $3 }",
      "}"
    ]
  },
  "If let some": {
    "prefix": "if_some",
    "description": "If let Some pattern matching",
    "body": ["if let Some(${1:value}) = ${2:option} {", "  $3", "}"]
  },
  "Clone struct": {
    "prefix": "clone_struct",
    "description": "Clone a struct",
    "body": [
      "#[derive(Clone)]",
      "struct ${1:Name} {",
      "  ${2:field}: ${3:Type},",
      "}"
    ]
  },
  "Debug struct": {
    "prefix": "debug_struct",
    "description": "Debug struct",
    "body": [
      "#[derive(Debug)]",
      "struct ${1:Name} {",
      "  ${2:field}: ${3:Type},",
      "}"
    ]
  },
  "Clone and debug struct": {
    "prefix": "clone-debug_struct",
    "description": "Clone and debug struct",
    "body": [
      "#[derive(Clone, Debug)]",
      "struct ${1:Name} {",
      "  ${2:field}: ${3:Type},",
      "}"
    ]
  },
  "Windows only derive": {
    "prefix": "win_only",
    "description": "A Windows only derive",
    "body": ["#[cfg(target_os = \"windows\")]"]
  },
  "MacOS only derive": {
    "prefix": "mac_only",
    "description": "A MacOS only derive",
    "body": ["#[cfg(target_os = \"macos\")]"]
  },
  "Linux only derive": {
    "prefix": "linux_only",
    "description": "A Linux only derive",
    "body": ["#[cfg(target_os = \"linux\")]"]
  },
  "iOS only derive": {
    "prefix": "ios_only",
    "description": "An iOS only derive",
    "body": ["#[cfg(target_os = \"ios\")]"]
  },
  "Android only derive": {
    "prefix": "android_only",
    "description": "An Android only derive",
    "body": ["#[cfg(target_os = \"android\")]"]
  }
}
